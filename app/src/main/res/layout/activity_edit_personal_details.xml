<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backround"
    android:layout_height="match_parent"
    tools:context=".EditPersonalDetailsActivity">

    <TextView
        android:id="@+id/editdetailsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="EDIT PERSONAL DETAILS"
        android:textColor="@color/maincolor"
        android:textSize="20dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/editdetailsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="full name"
        android:textColorHint="@color/hintcolor"
        android:layout_below="@id/editdetailsHeading"
        android:layout_marginTop="40dp"
        android:textColor="@color/textcolor"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/editdeatilsUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="user name"
        android:textColorHint="@color/hintcolor"
        android:layout_below="@id/editdetailsName"
        android:layout_marginTop="15dp"
        android:textColor="@color/textcolor"
        android:inputType="textPersonName"/>


    <EditText
        android:id="@+id/editdetailsBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editdeatilsUserName"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="bio"
        android:textColor="@color/textcolor"
        android:inputType="text"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/hintcolor"/>

    <Button
        android:id="@+id/editdetailsSAVE"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/green_button"
        android:text="SAVE"
        android:onClick="saveChanges"
        android:textColor="#fff"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/editdetailsBio"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/editdetailsCancel"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/red_button"
        android:text="CANCEL"
        android:onClick="cancelChanges"
        android:layout_alignParentRight="true"
        android:textColor="#fff"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/editdetailsBio"
        android:layout_marginTop="30dp"/>

</RelativeLayout>